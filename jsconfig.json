
{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app/**/*.js", 
    "app/**/*.jsx", 
    "components/**/*.js", 
    "components/**/*.jsx",
    "context/**/*.js",
    "context/**/*.jsx",
    "lib/**/*.js",
    "lib/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
